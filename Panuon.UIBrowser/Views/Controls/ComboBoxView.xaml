                                               VerticalAlignment="Center" />
                                    <pu:PUButton pu:Helper.ColumnDefinition="3*"
                                                 Content="移除最后一个"
                                                 cm:Message.Attach="[Event Click]=[Action RemoveItem]" />
                                </Grid>

                            </StackPanel>
                            <pu:PUComboBox Grid.Column="1"
                                           Width="190"
                                           Height="36"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="50,82,0,82"
                                           SearchMode="{Binding SearchMode}"
                                           DeleteMode="{Binding DeleteMode}"
                                           BorderBrush="{Binding BorderBrush}"
                                           BorderCornerRadius="{Binding BorderCornerRadius}"
                                           CoverBrush="{Binding CoverBrush}"
                                           SelectedBrush="{Binding SelectedBrush}"
                                           ShadowColor="{Binding ShadowColor}"
                                           IsEditable="{Binding EditableIsChecked}"
                                           Foreground="{Binding Foreground}"
                                           BindingItems="{Binding ComboBoxItems, Mode=TwoWay}"
                                           SelectedValuePath="Value"
                                           SelectedValue="{Binding SelectedValue,Mode=TwoWay}"
                                           cm:Message.Attach="[Event DeleteItem]=[Action DeleteItem($eventArgs)]">
                            </pu:PUComboBox>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </pu:PUSlideShow>
    </Grid>
</UserControl>
