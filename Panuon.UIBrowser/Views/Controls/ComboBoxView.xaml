                                <Grid Width="250"
                                      Height="30"
                                      Margin="0,0,0,10">
                                    <TextBlock pu:Helper.ColumnDefinition="2*"
                                               Text="搜索模式："
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center" />
                                    <pu:PUComboBox pu:Helper.ColumnDefinition="3*"
                                                   SelectedValuePath="Value"
                                                   cm:Message.Attach="[Event SelectionChanged]=[Action SearchModeChanged($this.SelectedValue)]">
                                        <pu:PUComboBoxItem Value="None"
                                                           IsSelected="True"
                                                           Content="不使用搜索" />
                                        <pu:PUComboBoxItem Value="TextChanged"
                                                           Content="当搜索框文本变化时" />
                                        <pu:PUComboBoxItem Value="Enter"
                                                           Content="在搜索框按下Enter键时" />
                                    </pu:PUComboBox>
                                </Grid>
                                <Grid Width="250"
                                      Height="30"
                                      Margin="0,0,0,10">
                                    <TextBlock pu:Helper.ColumnDefinition="2*"
                                               Text="删除模式："
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center" />
                                    <pu:PUComboBox pu:Helper.ColumnDefinition="3*"
                                                   SelectedValuePath="Value"
                                                   cm:Message.Attach="[Event SelectionChanged]=[Action DeleteModeChanged($this.SelectedValue)]">
                                        <pu:PUComboBoxItem Value="Delete"
                                                           IsSelected="True"
                                                           Content="直接删除" />
                                        <pu:PUComboBoxItem Value="EventOnly"
                                                           Content="删除前弹框" />
                                    </pu:PUComboBox>

                                </Grid>
                                <Grid Width="250"
                                      Height="30"
                                      Margin="0,0,0,10">
                                    <TextBlock pu:Helper.ColumnDefinition="2*"
                                               Text="允许删除："
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center" />
